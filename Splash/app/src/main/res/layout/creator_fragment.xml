<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="@color/backgroundfragment">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_deep"
                android:text="PT.SBK V.01"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_deep"
                android:text="Created By :"
                android:textSize="21dp"/>

            <ImageView
                android:id="@+id/bariqImg"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:src="@drawable/bariqp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Muhammad Bariq S"
                android:textColor="@color/gray_deep"
                android:paddingLeft="120dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Project Team Leader/Writer"
                android:paddingLeft="95dp"
                android:textColor="@color/gray_deep"/>

            <ImageView
                android:id="@+id/dotenImg"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:src="@drawable/doyenp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shendi Permana"
                android:paddingLeft="130dp"
                android:textColor="@color/gray_deep" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Backend Developer"
                android:paddingLeft="115dp"
                android:textColor="@color/gray_deep"/>

            <ImageView
                android:id="@+id/awalImg"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:src="@drawable/awalp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Muhammad Walidin"
                android:paddingLeft="120dp"
                android:textColor="@color/gray_deep" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UI Designer"
                android:paddingLeft="120dp"
                android:textColor="@color/gray_deep"/>

        </LinearLayout>


</RelativeLayout>